<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
        <hibernate-mapping>
          <class name="com.modal.Query" table="query_tbl">
              <id name="queryID" column="query_id">
                <generator class="increment"></generator>
              </id>
              <property name="queryName" column="query_name" length="50"></property>
              <property name="queryEmail" column="query_email" length="50" unique="true"></property>
              <property name="querySubject" column="query_subject" length="50" ></property>
              <property name="queryDetail" column="query_detail" length="50"></property>
              

              
          </class>
        </hibernate-mapping>